<Page
    x:Class="Project_Radon.Settings.oobe1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Project_Radon.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Border
            x:Name="titleBar"
            BorderBrush="Red"
            BorderThickness="0">
            <StackPanel
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                Orientation="Horizontal">
                <Image
                    Width="20"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="ms-appx:///Assets/StoreLogo.png" />
                <TextBlock
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    Style="{ThemeResource CaptionTextBlockStyle}">
                    Radon Browser • Initial setup
                </TextBlock>
            </StackPanel>
        </Border>
        <StackPanel
            Grid.Row="1"
            Margin="0,48"
            VerticalAlignment="Center">
            <Image Width="120" Source="ms-appx:///Assets/welcomegif.png" />

            <TextBlock
                Style="{ThemeResource SubheaderTextBlockStyle}"
                Text="Welcome to Radon"
                TextAlignment="Center" />

            <TextBlock
                Margin="0,8"
                FontSize="18"
                Style="{ThemeResource SubheaderTextBlockStyle}"
                Text="We need to set a few things up before you start surfing the web."
                TextAlignment="Center" />

        </StackPanel>
        <Button
            Grid.Row="1"
            Margin="0,40"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="Button_Click"
            Style="{ThemeResource AccentButtonStyle}">
            <StackPanel Orientation="Horizontal">

                <TextBlock VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}">Next</TextBlock>
                <FontIcon
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Glyph="&#xe974;" />
            </StackPanel>
        </Button>

    </Grid>
</Page>
