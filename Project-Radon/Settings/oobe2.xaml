<Page
    x:Class="Project_Radon.Settings.oobe2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Project_Radon.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid>
            <Border
                x:Name="titleBar"
                BorderBrush="Red"
                BorderThickness="0">
                <StackPanel
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Orientation="Horizontal">
                    <Image
                        Width="20"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Assets/StoreLogo.png" />
                    <TextBlock
                        Margin="15,0,0,0"
                        VerticalAlignment="Center"
                        Style="{ThemeResource CaptionTextBlockStyle}">
                        Radon Browser • Initial setup
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="1" Margin="30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="20,0" VerticalAlignment="Center">
                <Image Width="120" Source="ms-appx:///Assets/clipboard_3d.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{ThemeResource SubheaderTextBlockStyle}"
                    Text="License Agreements"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="0,8"
                    FontSize="18"
                    Style="{ThemeResource SubheaderTextBlockStyle}"
                    Text="Before you can use Radon, please agree to the following license agreements."
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />
            </StackPanel>
            <ScrollViewer
                Grid.Column="1"
                Margin="20,0,20,130"
                Padding="0,20"
                BorderBrush="{ThemeResource SystemBaseLowColor}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel CornerRadius="8">




                    <TextBlock
                        x:Name="LicenseTextBox"
                        Margin="30,20,30,0"
                        IsTextSelectionEnabled="True"
                        Text="Getting license..."
                        TextAlignment="Justify"
                        TextWrapping="WrapWholeWords" />


                </StackPanel>
            </ScrollViewer>

            <Button
                x:Name="nextbutton"
                Grid.Column="1"
                Margin="20,40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="Button_Click"
                IsEnabled="False"
                Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}">Next</TextBlock>
                    <FontIcon
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Glyph="&#xe974;" />
                </StackPanel>
            </Button>
            <Button
                x:Name="backbutton"
                Grid.Column="1"
                Margin="20,40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="Button_Click_1">
                <StackPanel Orientation="Horizontal">
                    <FontIcon
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Glyph="&#xe973;" />
                    <TextBlock VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}">Go back</TextBlock>
                </StackPanel>
            </Button>
            <CheckBox
                Grid.Column="1"
                Margin="20,90"
                VerticalAlignment="Bottom"
                Checked="CheckBox_Checked"
                Content="I agree to the terms and conditions"
                Unchecked="CheckBox_Unchecked" />
        </Grid>
    </Grid>
</Page>
